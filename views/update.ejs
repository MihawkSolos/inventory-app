<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/update.css">
    <title>Update Product</title>
</head>
<body>
    <% if(type === 'products'){ %>
    
        <div class="headerContainer">
            <p><span>Update Product: </span></p>
        </div>
        <form action="/<%= type %>/update/<%= product.id %>" method="POST">
            <label for="name">Product Name:</label>
            <input type="text" id="name" name="name" value="<%=product.name%>" required><br><br>

            <label for="category">Category:</label>
            <select id="category" name="category_id" required>
                <% categories.forEach(category => { %>
                    <option value="<%= category.id %>" <%= category.id === product.category_id ? 'selected' : '' %>>
                        <%= category.name %>
                    </option>
                <% }) %>
            </select><br><br>

            <label for="price">Price:</label>
            <input type="number" id="price" name="price" value="<%=product.price%>" required><br><br>

            <label for="imageurl">Image URL:</label>
            <input type="text" id="imageurl" name="imageurl" value="<%=product.imageurl%>"><br><br>

            <button type="submit">Update</button>
        </form>
    <% } else if (type === 'categories') { %>
        <div class="headerContainer">
            <p><span>Update Category: </span></p>
        </div>
        <form action="/<%= type %>/update/<%= category.id %>" method="POST">
            <label for="name">Category Name:</label>
            <input type="text" id="name" name="name" value="<%= category.name %>" required><br><br>

            <label for="description">Category Description:</label>
            <textarea id="description" name="description"><%= category.description %></textarea><br><br>
            
            <button type="submit">Update</button>
        </form>
    <% } %>
    
</body>
</html>
